" My vifmrc

colorscheme dracula
hi Win ctermbg=NONE
hi Border ctermbg=0
hi StatusLine ctermbg=0
hi CmdLine ctermbg=NONE
hi TopLine ctermbg=0

set tuioptions-=ps
set quickview
set dotfiles
set relativenumber

set wildmenu

source ~/.config/vifm/scripts/favicons.vifm

nmap gh :cd ~ <CR>
nmap gU :cd /usr <CR>
nmap gd :cd ~/Downloads <CR>
nmap g.c :cd ~/.config <CR>
nmap g.s :cd ~/.scripts <CR>

fileviewer *.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.mpeg,*.vob,
		   \*.fl[icv],*.m2v,*.mov,*.webm,*.ts,*.mts,*.m4v,*.r[am],*.qt,*.divx,
		   \ vifmimg videopreview %px %py %pw %ph %c
		   \ %pc
		   \ vifmimg clear

fileviewer *.bmp,*.jpg,*.jpeg,*.png,*.xpm
		   \ vifmimg draw %px %py %pw %ph %c
		   \ %pc
		   \ vifmimg clear

fileviewer *.gif
		   \ vifmimg gifpreview %px %py %pw %ph %c
		   \ %pc
		   \ vifmimg clear

fileviewer *.ico
		   \ vifmimg magickpreview %px %py %pw %ph %c
		   \ %pc
		   \ vifmimg clear

fileviewer <audio/*>
		  \ vifmimg audiopreview %px %py %pw %ph %c
		  \ %pc
		  \ vifmimg clear

fileviewer <font/*>
		  \ vifmimg fontpreview %px %py %pw %ph %c
		  \ %pc
		  \ vifmimg clear

fileviewer *.img
			\ echo "A binary image file."
